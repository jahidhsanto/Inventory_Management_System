<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="MasterPage.master.cs" Inherits="STORE_FINAL.TEST.MasterPage" %>

<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <title><asp:ContentPlaceHolder ID="TitleContent" runat="server" /></title>
    <link rel="stylesheet" type="text/css" href="Styles.css" />
    <script>
        function toggleNav() {
            var sidebar = document.getElementById("sidebar");
            var mainContent = document.getElementById("mainContent");

            if (sidebar.style.left === "0px") {
                sidebar.style.left = "-250px";
                mainContent.style.marginLeft = "0";
            } else {
                sidebar.style.left = "0px";
                mainContent.style.marginLeft = "250px";
            }
        }
    </script>
</head>
<body>
    <form id="mainForm" runat="server">  <!-- ✅ Ensures ASP.NET controls work -->

        <!-- Sidebar Navigation -->
        <div id="sidebar" class="sidebar">
            <button type="button" class="close-btn" onclick="toggleNav()">☰</button>
            <ul>
                <li><a href="Default.aspx">Home</a></li>
                <li><a href="About.aspx">About</a></li>
                <li><a href="Contact.aspx">Contact</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div id="mainContent" class="main-content">
            <!-- Header Section -->
            <header>
                <button type="button" class="open-btn" onclick="toggleNav()">☰ Menu</button>
                <h1>My ASP.NET Web Application</h1>
            </header>

            <!-- Page Content -->
            <asp:ContentPlaceHolder ID="MainContent" runat="server" />

            <!-- Footer -->
            <footer>
                <p>&copy; 2025 My Website. All Rights Reserved.</p>
            </footer>
        </div>

    </form>
</body>
</html>
